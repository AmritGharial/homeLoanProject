{
  "name": "webdriverio-tests",
  "version": "0.0.0",
  "private": true,
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@badisi/wdio-harness": "^4.1.2",
    "@testing-library/webdriverio": "^3.2.1",
    "@wdio/local-runner": "^9.12.1",
    "@wdio/mocha-framework": "^9.12.1",
    "@wdio/spec-reporter": "^9.11.0",
    "wdio-wait-for": "^3.1.0"
  },
  "dependencies": {
    "wdio-allure-reporter": "^0.8.3"
  },
  "scripts": {
    "clean:allure": "if exist allure-results (rmdir /s /q allure-results) & if exist allure-report (rmdir /s /q allure-report)",
    "generate:allure": "allure generate allure-results --clean -o allure-report",
    "open:allure": "allure open allure-report",
    "test": "npm run clean:allure && npx wdio wdio.conf.js && npm run generate:allure && npm run open:allure"
  }
}
